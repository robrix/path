module Base.Functor

import Base.Function
import Base.Unit

Functor : ∀ f : Type -> Type . Type
Functor =  \ f
        .  ∀ a : Type
        .  ∀ b : Type
        .  (  a ->   b)
        -> (f a -> f b)

void : ∀ f : Type -> Type . Functor f -> ∀ a : Type . f a -> f Unit
void = \ _ map A . map A Unit (const Unit A unit)

(<$) : ∀ f : Type -> Type . Functor f -> ∀ a : Type . ∀ b : Type . a -> f b -> f a
(<$) = \ _ map A B a . map B A (const A B a)
