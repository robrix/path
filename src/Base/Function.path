module Base.Function

id : a -> a
id = \ _ a . a

const : a -> b -> a
const = \ _ _ a _ . a

flip : (a -> b -> c) -> (b -> a -> c)
flip = \ _ _ _ f b a . f a b

fix :  ((a -> b) -> a -> b)
    -> (a -> b)
fix = \ a b f . f (fix a b f)

compose :  (b -> c)
        -> (a -> b)
        -> (a -> c)
compose = \ _ _ _ f g x . f (g x)
