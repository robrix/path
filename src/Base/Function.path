module Base.Function

id : a -> a
id = \ a . a

const : a -> b -> a
const = \ a _ . a

flip : (a -> b -> c) -> (b -> a -> c)
flip = \ f b a . f a b

fix :  ∀ a : Type
    .  ∀ b : Type
    .  ((a -> b) -> a -> b)
    -> (a -> b)
fix = \ a b f . f (fix a b f)

compose :  (b -> c)
        -> (a -> b)
        -> (a -> c)
compose = \ f g x . f (g x)
