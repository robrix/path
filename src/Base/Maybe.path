module Base.Maybe

import Base.Bool
import Base.Function
import Base.Functor

Maybe : Type -> Type
Maybe = \ a . { b : Type } -> b -> (a -> b) -> b

just : a -> Maybe a
just = \ a _ just . just a

nothing : Maybe a
nothing = \ nothing _ . nothing

isJust : Maybe a -> Bool
isJust = \ m . m false (\ _ . true)

map : Functor Maybe
map = \ f m . m nothing (\ a . just (f a))
