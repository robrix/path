module Base.Sigma

Sigma : (A : Type) -> (A -> Type) -> Type
Sigma = \ A B . { C : Type } -> (( a : A ) -> B a -> C) -> C

sigma :  { A : Type } -> { B : A -> Type } -> ( a : A ) -> B a -> Sigma A B
sigma = \ a b f . f a b

fst : { A : Type } -> { B : A -> Type } -> Sigma A B -> A
fst = \ s . s (\ a _ . a)
