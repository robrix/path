module Base.Bool

import Base.Lazy

Bool : Type
Bool = { a : Type } -> a -> a -> a

true : Bool
true = \ a _ . a

false : Bool
false = \ _ b . b

not : Bool -> Bool
not = \ f a b . f b a

(if _ then _ else _) : { a : Type } -> Bool -> Lazy a -> Lazy a -> a
(if _ then _ else _) = \ {a} c t e . force {a} (c {Lazy a} t e)
