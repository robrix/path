module Base.Nat

import Base.Fix

NatF : Type -> Type
NatF = \ a . { b : Type } -> b -> (a -> b) -> b

zf : NatF a
zf = \ z _ . z

sf : a -> NatF a
sf = \ a _ s . s a


Nat : Type
Nat = Fix NatF

z : Nat
z = in zf

s : Nat -> Nat
s = \ n . in (sf n)


iter : { a : Type } -> a -> (a -> a) -> Nat -> a
iter = \ z s n . n (\ k f . f z (\ m . s (k m)))


(_ + _) : Nat -> Nat -> Nat
(_ + _) = \ m . iter m s

(_ * _) : Nat -> Nat -> Nat
(_ * _) = \ m . iter z ((_ + _) m)
